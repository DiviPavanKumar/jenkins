// Roboshop-catalogue service Jenkins pipeline

pipeline {
    // Pre-build stage
    agent { label 'AGENT-1' }

    environment { 
        appVersion = ''
    }

    options {
        timeout(time: 30, unit: 'MINUTES')
        disableConcurrentBuilds() 
    }

    // Build stages
    stages {
        stage('Read package.json') {
            steps {
                script {
                    def packageJson = readJSON file: 'catalogue/package.json'
                    echo "Package Name: ${packageJson.name}"
                    env.appVersion = packageJson.version
                    echo "App Version: ${env.appVersion}"
                    // Access other properties as needed, e.g., packageJson.scripts.build
                }
            }
        }
        stage('Build Stage') {
            steps {
                script {
                    sh '''
                        echo "Building Stage"
                    '''
                }
            }
        }
        stage('Testing Stage') {
            steps {
                script {
                    sh '''
                        echo "Testing Stage"
                    '''
                }
            }
        }
        stage('Deploy Stage') {
            steps {
                script {
                    sh '''
                        echo "Deploying...."
                    '''
                }
            }
        }
    }

    post {
        always {
            echo "Always say Hi"
        }
        success {
            echo "Pipeline is Success"
        }
        failure {
            echo "Pipeline has Failed"
        }
    }
}